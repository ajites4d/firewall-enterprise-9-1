# Firewall Enterprise 9.1 - Configuration Example
# Copy this file to firewall-config.yaml and update with your values

version: "9.1.0"
environment: "development"

# Server Configuration
server:
  port: 8080
  host: "0.0.0.0"
  read_timeout: 30
  write_timeout: 30

# Database Configuration  
database:
  dynamodb:
    table: "firewall-enterprise-9-1"
    region: "us-east-1"

# Security Configuration
security:
  jwt_secret: "change-this-to-a-secure-random-string"
  encryption_key: "change-this-to-32-character-string"
  token_expiry: 3600
  mfa_required: false

# AI Engine Configuration
ai:
  behavioral:
    enabled: true
    confidence_threshold: 0.85
  threat_intel:
    enabled: true
    cache_ttl: 3600

# Monitoring
monitoring:
  log_level: "info"
  prometheus_port: 9090
